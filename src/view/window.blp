using Gtk 4.0;
using Adw 1;

template $Window : Adw.ApplicationWindow {
  default-width: 1000;
  default-height: 500;
  title: _("Periscope");

  Adw.ToolbarView{
    top-bar-style: raised;
    bottom-bar-style: raised;

    [top]
    Adw.HeaderBar header_bar {
    }

    content: Box {
      orientation: vertical;
      valign: end;

      $SongGrid song_grid {
      }
    };

    [bottom]
    $SongPlayer song_player {
    }
  }
}